

<body id="page-top">
<div id="wrapper">
      <%= render '/admins/navigation'%>
  <div id="content-wrapper" class="d-flex flex-column">
    <div id="content">
      <%= render '/admins/header'%>

      <!-- Container Fluid-->
      <div class="container-fluid" id="container-wrapper">
        <%= render '/admins/breadcrumb'%>

         <div class="row">
          <div class="col-lg-12 mb-4">
            <!-- Simple Tables -->
            <div class="card">
              <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">Simple Tables</h6>
              </div>
              <div class="table-responsive">
                <table class="table align-items-center table-flush">
                  <thead class="thead-light">
                    <tr>
                      <th>Category ID</th>
                      <th>Category Name</th>
                      
                      <th>Action</th>
                      <th>Delete</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @categories.each do |category| %>
                      <tr>
                        <td><a href="#"><%= category.id %></a></td>
                        <td><%= category.name%></td>
                        <td><%= link_to "Edit", edit_category_path(category), class:"btn btn-sm btn-primary"%></td>
                        <td><%= link_to "Delete", category_path(category), method: :delete, data:{confirm: "are you sure?"}, class:"btn btn-danger mb-1" %></td>
                      </tr>
                    <%end%>
                    
                  </tbody>
                </table>
              </div>
              <div class="card-footer"></div>
            </div>
          </div>
        </div>
        <!--Row-->


      </div>
      <!---Container Fluid-->
    </div>
    <%= render '/admins/footer'%>
  </div>
</div>

<!-- Scroll to top -->
<a class="scroll-to-top rounded" href="#page-top">
  <i class="fas fa-angle-up"></i>
</a>




<body id="page-top">
  <div id="wrapper">
    	<%= render '/admins/navigation'%>
    <div id="content-wrapper" class="d-flex flex-column">
      <div id="content">
        <%= render '/admins/header'%>

        <!-- Container Fluid-->
        <div class="container-fluid" id="container-wrapper">
          <%= render '/admins/breadcrumb'%>

           <div class="row">
            <div class="col-lg-12 mb-4">
              <!-- Simple Tables -->
              <div class="card">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                  <h6 class="m-0 font-weight-bold text-primary">Simple Tables</h6>
                </div>
                <div class="table-responsive">
                  <table class="table align-items-center table-flush">
                    <thead class="thead-light">
                      <tr>
                        <th>Game ID</th>
                        <th>Game Name</th>
                        <th>Game Categories</th>
                        <th>Game Description</th>
                        <th>Game play number</th>
                        <th>Action</th>
                        <th>Delete</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% @games.each do |game| %>
                        <tr>
                          <td><a href="#"><%= game.id %></a></td>
                          <td><%= game.name%></td>
                          <td><%= game.category.name%></td>
                          <td><%= game.description%></td>
                          <td><%= game.numberOfPlay%></td>
                          <td><%= link_to "Edit", edit_game_path(game), class:"btn btn-sm btn-primary"%></td>
                          <td><%= link_to "Delete", game_path(game), method: :delete, data:{confirm: "are you sure?"}, class:"btn btn-danger mb-1" %></td>
                        </tr>
                      <%end%>
                      
                    </tbody>
                  </table>
                </div>
                <div class="card-footer"></div>
              </div>
            </div>
          </div>
          <!--Row-->


        </div>
        <!---Container Fluid-->
      </div>
      <%= render '/admins/footer'%>
    </div>
  </div>

  <!-- Scroll to top -->
  <a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
  </a>


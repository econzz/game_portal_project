<%if @game.errors.any?%>
<h2>THERE IS AN ERROREDITEDFROMFORM</h2>
<ul>
  <% @game.errors.full_messages.each do |msg|%>
    <li><%= msg %></li>
  <%end%>
</ul>
<%end%>
<div class="card mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                  <h6 class="m-0 font-weight-bold text-primary">Form Basic</h6>
                </div>
                <div class="card-body">
                  <%= form_for @game do |f| %>
                  
                    <div class="form-group">
                      <%= f.label :name %>
                      <%= f.text_field :name,class:"form-control",placeholder:"Enter Name" %>
                      <!--small id="emailHelp" class="form-text text-muted">We'll never share your
                        email with anyone else.</small-->
                    </div>
                    <div class="form-group">
                      <%= f.label :description %>
                      <%= f.text_area :description, class:"form-control",rows:"3" %>
                    </div>
                    
                    <div class="form-group">
                      <label for="exampleInputPassword1">Upload Cover Picture</label>
                      <div class="custom-file">
                        <%= f.file_field :cover_image,class:"custom-file-input" %>
                        <%= f.label :cover_image,class:"custom-file-label" %>
                      </div>
                    </div>
                    <div class="form-group">
                      <label for="exampleInputPassword1">Upload Cover Picture 2</label>
                      <div class="custom-file">
                        <input type="file" class="custom-file-input" id="customFile">
                        <label class="custom-file-label" for="customFile">Choose file</label>
                      </div>
                    </div>
                    <div class="form-group">
                      <label for="exampleInputPassword1">Upload Game</label>
                      <div class="custom-file">game_zip
                        <%= f.file_field :game_zip,class:"custom-file-input" %>
                        <%= f.label :game_zip,class:"custom-file-label" %>
                        
                      </div>
                    </div>
                    
                    <%= submit_tag "Submit", class:"btn btn-primary"%>
                  <%end%>
                  
                    
                  
                </div>
              </div>